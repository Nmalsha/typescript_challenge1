{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true, // It's generally safe to skip default library checks.
    "moduleResolution": "node", // Using "node" is usually more straightforward for Node.js projects.
    "baseUrl": "./",
    "paths": {
      // Add any path mappings if needed for module resolution.
    },
    "sourceMap": true,
    "outDir": "./dist", // Output directory for compiled files.
    "rootDir": "./src", // Root directory for your source files.
    "strictPropertyInitialization": false // This can be set to true to enforce strict initialization.
  },
  "include": ["src/**/*.ts"], // Specify the files to include in compilation.
  "exclude": ["node_modules"] // Specify the files or directories to exclude from compilation.
}
